<div class="row-fluid">
  <%= form_for @comment, html: { multipart: true, class: 'form-horizontal' } do |f| %>
    <div class="control-group">
      <div class="controls">
        <%= f.text_field :text, class: 'input-xxlarge', autofocus: '' %>
        <!--<%= f.submit "Submit", class: 'btn btn-primary' %>-->
      </div>
    </div>
    <!--<div class="control-group">
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-camera"></i></span>      
          <%= f.file_field :attachment %>
        </div>
      </div>
    </div>-->
  <% end %>
</div>
<div class="row-fluid">
  <% @comments.each do |c| %>
    <ul class="inline">
      <li>
        <%= link_to c, method: :delete do %>
          <i class="icon-remove"></i>
        <% end %>
      </li>
      <li class="label"><%= c.user_name %></li>
      <li><%= c.text %></li>
      <li>
        <% if c.attachment.exists? %>
          <%= link_to image_tag(c.attachment.url(:thumb), class: 'img-rounded'), c.attachment.url %>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>
